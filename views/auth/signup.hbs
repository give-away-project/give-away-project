<div id="form">
  <h2>Register</h2>


    {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
    {{/if}}


  <form action="/signup" method="POST">

     <label>
    Name
    <input type="text" name="name" />
    </label>

    <label>
    Surname
    <input type="text" name="surname" />
   </label>

    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" required />
    </label>

    <label> Password
      <input type="password" name="passwordHash" placeholder="********" required />
    </label>

    <button type="submit">Create account</button>

  </form>
</div>